<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/admin"
                        android:layout_marginTop="-240dp"
                        android:layout_marginBottom="-240dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold"
                            android:layout_marginLeft="64dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Phone : "/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_gravity="center_vertical"
                                android:text="0799119911"/>
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:id="@+id/ivbAdminCall"
                                android:layout_weight="1"
                                android:src="@drawable/ic_call_black_24dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Email : "/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_gravity="center_vertical"
                                android:text="health@mmust.ac.ke"/>
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/ivbAdminMail"
                                android:layout_weight="1"
                                android:src="@drawable/ic_email_black_24dp"/>
                        </LinearLayout>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btAdminMsg"
                            android:text="send us a direct message"/>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/health"
                        android:layout_marginTop="-30dp"
                        android:layout_marginBottom="-30dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold"
                            android:layout_marginLeft="64dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Phone : "/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_gravity="center_vertical"
                                android:text="0787654321"/>
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:id="@+id/ivbHealthCall"
                                android:layout_weight="1"
                                android:src="@drawable/ic_call_black_24dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Email : "/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_gravity="center_vertical"
                                android:text="health@mmust.ac.ke"/>
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/ivbHealthMail"
                                android:layout_weight="1"
                                android:src="@drawable/ic_email_black_24dp"/>
                        </LinearLayout>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btHealthMsg"
                            android:text="send us a direct message"/>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/security"
                        android:layout_marginTop="-70dp"
                        android:layout_marginBottom="-70dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold"
                            android:layout_marginLeft="64dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Phone : "/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_gravity="center_vertical"
                                android:text="0712345678"/>
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:id="@+id/ivbSecurityCall"
                                android:src="@drawable/ic_call_black_24dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Email : "/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_gravity="center_vertical"
                                android:text="security@mmust.ac.ke"/>
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/ivbSecurityMail"
                                android:src="@drawable/ic_email_black_24dp"/>
                        </LinearLayout>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btSecurityMsg"
                            android:text="send us a direct message"/>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>